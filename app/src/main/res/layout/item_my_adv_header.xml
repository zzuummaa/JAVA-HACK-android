<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <Spinner
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sep"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/filters_spinner"
        android:elevation="0dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/trade_spinner_background"
        android:entries="@array/businesses_filters"
        android:popupBackground="?android:colorPrimary"
        android:layout_marginEnd="16dp" />


    <View
        android:id="@+id/sep"
        android:alpha="0.2"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>