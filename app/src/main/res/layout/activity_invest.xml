<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:elevation="4dp"
        android:background="@android:color/white"
        android:id="@+id/appbar_actual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_actual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/white"
            app:layout_scrollFlags="scroll|enterAlways|snap|exitUntilCollapsed">

            <ImageView
                tools:src="@drawable/rb_logo"
                android:layout_margin="10dp"
                android:id="@+id/iv_collaps"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:fitsSystemWindows="true"
                android:scaleType="fitCenter"
                app:layout_collapseMode="parallax"/>

<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="160dp"-->
<!--                android:layout_gravity="bottom"-->
<!--                android:background="@drawable/scrim"/>-->

            <androidx.appcompat.widget.Toolbar
                app:titleTextColor="@android:color/black"
                android:outlineAmbientShadowColor="@android:color/black"
                android:outlineSpotShadowColor="@android:color/black"
                android:id="@+id/toolbar"
                app:layout_collapseMode="pin"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:minHeight="?attr/actionBarSize">


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:paddingBottom="60dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:background="@android:color/white"
        android:layout_gravity="fill_vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:ellipsize="end"
                android:textColor="@android:color/black"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/tv1"
                tools:text="cdsancdancdkcdsjcndjsncd sc ds cjds ck dskc jc dsac c ds c ds cds cds cds c ds cds csdc"
                android:maxLength="500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/sep5"
                android:alpha="0.2"
                android:background="@color/separator_color"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <FrameLayout
                android:id="@+id/container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/sep"
                android:alpha="0.2"
                android:background="@color/separator_color"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>


            <FrameLayout
                android:layout_marginTop="20dp"
                android:id="@+id/container2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/sep2"
                android:alpha="0.2"
                android:background="@color/separator_color"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <FrameLayout
                android:layout_marginTop="20dp"
                android:id="@+id/container3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/sep3"
                android:alpha="0.2"
                android:background="@color/separator_color"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <FrameLayout
                android:layout_marginTop="20dp"
                android:id="@+id/container4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/sep4"
                android:alpha="0.2"
                android:background="@color/separator_color"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <FrameLayout
                android:layout_marginBottom="90dp"
                android:layout_marginTop="20dp"
                android:id="@+id/container5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <TextView
        android:elevation="4dp"
        android:textSize="18dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom|center"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/rounded_selector"
        android:id="@+id/btn_invest"
        android:text="@string/invest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>